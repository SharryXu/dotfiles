#!/bin/bash

# Check command existed or not.
# Globals:
#   command
# Arguments:
#   Command Name
# Returns:
#   Command Exist Status

declare -r manual="Usage: command_exist <command name>"

if [ $# -eq 1 ]; then
  if command -v $1 > /dev/null 2>&1; then
    echo 0
  else
    echo 1
  fi
else
  echo -e $manual
  exit 1
fi

exit #?
