# Setup path
export GOPATH=$HOME/Go
export GOROOT=/usr/local/opt/go/libexec
export NVM_DIR="$HOME/.nvm"
export CUSTOM_BIN="$HOME"/.bin
export PACKAGE_BIN=/usr/local/bin
export PACKAGE_SBIN=/usr/local/bin/sbin
export LLVM_PATH=/usr/local/opt/llvm/bin
export PYENV_ROOT="$HOME/.pyenv"
export PYENV_BIN="$PYENV_ROOT/bin"
export PYTHON_CONFIGURE_OPTS="--enable-framework"

# Setup homebrew
export HOMEBREW_BOTTLE_DOMAIN=https://mirrors.ustc.edu.cn/homebrew-bottles
export HOMEBREW_NO_AUTO_UPDATE=true

# Setup language
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

export EDITOR='emacsclient'
export SSH_KEY_PATH="~/.ssh/rsa_id"
export TERM='screen-256color'

# Setup man page.
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'

# Setup dotfiles path.
export DOTFILES_PATH="$HOME"/Desktop/Projects/dotfiles

export PATH=$CUSTOM_BIN:$PYENV_BIN:$NVM_DIR:$PACKAGE_BIN:$PACKAGE_SBIN:$LLVM_PATH:$GOPATH/bin:$GOROOT/bin:$PATH
